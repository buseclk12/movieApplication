@model BLL.Models.DirectorsModel

@{
ViewData["Title"] = "Edit Director";
}

<h2>Edit Director</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Record.Id" />
    <div class="form-group">
        <label asp-for="Record.Name"></label>
        <input asp-for="Record.Name" class="form-control" />
        <span asp-validation-for="Record.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Record.Surname"></label>
        <input asp-for="Record.Surname" class="form-control" />
        <span asp-validation-for="Record.Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Record.IsRetired"></label>
        <input asp-for="Record.IsRetired" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
