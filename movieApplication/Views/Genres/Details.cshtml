@model BLL.Models.GenresModel

@{
    ViewData["Title"] = "Genre Details";
}

<h2>Genre Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Genre: @Model.Name</h4>
        <p class="card-text">
            <strong>Movies:</strong>
            @Html.Raw(Model.Movies)
        </p>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>