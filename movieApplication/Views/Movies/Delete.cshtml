@model BLL.Models.MoviesModel

@{
ViewData["Title"] = "Delete Movie";
}

<h1>Delete Movie</h1>

<div>
    <h3>Are you sure you want to delete this movie?</h3>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Record.Name</dd>
        <dt class="col-sm-2">Release Date</dt>
        <dd class="col-sm-10">@Model.Record.ReleaseDate?.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Director</dt>
        <dd class="col-sm-10">@Model.Record.Director?.Name</dd>
        <dt class="col-sm-2">Total Revenue</dt>
        <dd class="col-sm-10">@Model.Record.TotalRevenue.ToString("C")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Record.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
