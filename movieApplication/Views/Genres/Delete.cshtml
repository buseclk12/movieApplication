@model BLL.Models.GenresModel

<div class="delete-container">
    <div class="delete-card">
        <div class="delete-header">
            <div class="warning-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h2>Delete Genre</h2>
        </div>

        <div class="delete-content">
            <div class="alert-message">
                Are you sure you want to delete this genre?
            </div>

            <div class="genre-info">
                <div class="info-item">
                    <span class="label">Genre:</span>
                    <span class="value">@Model.Name</span>
                </div>
                <div class="info-item movies-list">
                    <span class="label">Movies:</span>
                    <span class="value movies">@Html.Raw(Model.Movies)</span>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="delete-actions">
                <input type="hidden" asp-for="Record.Id" />
                <div class="button-group">
                    <button type="submit" class="btn btn-delete">
                        <i class="fas fa-trash"></i>
                        Delete
                    </button>
                    <a asp-action="Index" class="btn btn-cancel">
                        <i class="fas fa-times"></i>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .delete-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 0 20px;
    }

    .delete-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .delete-header {
        background: #dc3545;
        color: white;
        padding: 1.5rem;
        text-align: center;
        position: relative;
    }

    .delete-header h2 {
        margin: 0;
        font-size: 1.8rem;
        font-weight: 500;
    }

    .warning-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: rgba(255,255,255,0.9);
    }

    .delete-content {
        padding: 2rem;
    }

    .alert-message {
        background: rgba(220,53,69,0.1);
        color: #dc3545;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        font-weight: 500;
        text-align: center;
    }

    .genre-info {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .info-item {
        display: flex;
        margin-bottom: 1rem;
    }

    .info-item:last-child {
        margin-bottom: 0;
    }

    .info-item.movies-list {
        flex-direction: column;
    }

    .label {
        font-weight: 600;
        min-width: 100px;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .value {
        color: #212529;
    }

    .value.movies {
        background: white;
        padding: 1rem;
        border-radius: 6px;
        border: 1px solid #dee2e6;
        line-height: 1.6;
    }

    .button-group {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 2rem;
    }

    .btn {
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .btn-delete {
        background: #dc3545;
        color: white;
    }

    .btn-delete:hover {
        background: #c82333;
        transform: translateY(-1px);
    }

    .btn-cancel {
        background: #6c757d;
        color: white;
    }

    .btn-cancel:hover {
        background: #5a6268;
        transform: translateY(-1px);
    }
    .delete-header {
        padding: 1rem;
    }

    .button-group {
        flex-direction: column;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }

    .info-item {
        flex-direction: column;
    }

    .label {
        margin-bottom: 0.5rem;
    }
</style>