@model BLL.Models.MoviesModel

@{
    ViewData["Title"] = "Movie Details";
}

<h1>Movie Details</h1>

<div>
    <h3>@Model.Record.Name</h3>
    <dl class="row">
        <dt class="col-sm-2">Release Date</dt>
        <dd class="col-sm-10">@Model.Record.ReleaseDate?.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Director</dt>
        <dd class="col-sm-10">@Model.Record.Director?.Name</dd>
        <dt class="col-sm-2">Total Revenue</dt>
        <dd class="col-sm-10">@Model.Record.TotalRevenue.ToString("C")</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Record.Id" class="btn btn-warning">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.Record.Id" class="btn btn-danger">Delete</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>