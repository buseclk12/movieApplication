@model BLL.Models.UsersModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body p-5">
                <h2 class="text-center mb-4">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                </h2>

                <form asp-action="Login" asp-controller="Users" method="post">
                    <div class="form-floating mb-3">
                        <input asp-for="Record.UserName" class="form-control" placeholder="Username" />
                        <label asp-for="Record.UserName">Username</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Record.Password" type="password" class="form-control" placeholder="Password" />
                        <label asp-for="Record.Password">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p>Don't have an account? <a asp-action="Register">Register here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>