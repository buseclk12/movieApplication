@model BLL.Models.MoviesModel

@{
ViewData["Title"] = "Edit Movie";
}

<h1>Edit Movie</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Record.Id" />
    <div class="form-group">
        <label asp-for="Record.Name" class="control-label"></label>
        <input asp-for="Record.Name" class="form-control" />
        <span asp-validation-for="Record.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Record.ReleaseDate" class="control-label"></label>
        <input asp-for="Record.ReleaseDate" class="form-control" type="date" />
        <span asp-validation-for="Record.ReleaseDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Record.DirectorId" class="control-label"></label>
        <select asp-for="Record.DirectorId" class="form-control" asp-items="ViewBag.DirectorIds"></select>
        <span asp-validation-for="Record.DirectorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Record.TotalRevenue" class="control-label"></label>
        <input asp-for="Record.TotalRevenue" class="form-control" />
        <span asp-validation-for="Record.TotalRevenue" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
