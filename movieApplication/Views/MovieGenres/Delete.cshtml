@model BLL.Models.MovieGenresModel

@{
ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Record.Id</dd>

        <dt class="col-sm-2">Movie</dt>
        <dd class="col-sm-10">@Model.MovieName</dd>

        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@Model.GenreName</dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Record.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
